---
const { variant = 'primary', class: customClass, ...props } = Astro.props;
---

<button
  class:list={[
    'px-4 py-2 rounded transition-colors text-sm',
    {
      'bg-[#B1293E] text-white hover:bg-[#922232]': variant === 'primary',
      'border-2 border-[#B1293E] text-[#B1293E] hover:bg-[#B1293E] hover:text-white': variant === 'outline'
    },
    customClass
  ]}
  {...props}
>
  <slot />
</button>