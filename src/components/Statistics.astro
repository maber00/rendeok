            </div>
        </div>
    </div>
</div>

<script>
    // Opcional: Animación de números al hacer scroll
    document.addEventListener('DOMContentLoaded', () => {
        const circles = document.querySelectorAll('.stat-circle');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-stat');
                }
            });
        }, { threshold: 0.5 });

        circles.forEach(circle => observer.observe(circle));
    });
</script>

<style>
    .stat-circle circle {
        transition: stroke-dashoffset 1.5s ease-in-out;
    }

    .animate-stat circle:nth-child(2) {
        animation: circle-fill 1.5s ease-in-out forwards;
    }

    @keyframes circle-fill {
        from {
            stroke-dashoffset: 283;
        }
        to {
            stroke-dashoffset: var(--end-offset, 0);
        }
    }
</style>